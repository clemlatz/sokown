<h2>Ships</h2>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th class="d-none d-sm-block">Destination</th>
  </tr>
  </thead>
  <tbody>
  {{#each @model as |ship| }}
    <tr>
      <td>
        <LinkTo @route="ships.get" @model={{ship}}>
          {{ship.name}}
        </LinkTo>
      </td>
      <td>
        <Position @position={{ship.currentPosition}} />
        {{ship.currentLocation.name}}
      </td>
      <td class="d-none d-sm-block">
        {{#if ship.isStationary}}
          -
        {{else}}
          <Position @position={{ship.destinationPosition}} />
          {{ship.destinationLocation.name}}
        {{/if}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
