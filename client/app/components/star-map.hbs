<div class="StarMap">
  <svg version="1.1"
       baseProfile="full"
       viewBox="-50 -50 100 100"
       xmlns="http://www.w3.org/2000/svg"
       role="img"
       aria-label="A star map of the solar system"
  >
    <rect x="-50" y="-50" width="100" height="100" fill="black" aria-hidden="true"/>

    <rect x="35" y="46" width="10" height="0.5" fill="white" aria-hidden="true"/>
    <text
      x="40"
      y="45"
      font-size="2"
      fill="white"
      text-anchor="middle"
      aria-hidden="true"
    >
      {{this.scale}} S.U.
    </text>

    {{#each @locations as |location| }}
      <StarMapObject
        @scale={{this.scale}}
        @label={{location.name}}
        @position={{location.position}}
        @primaryBodyPosition={{location.primaryBodyPosition}}
        @distanceFromPrimaryBody={{location.distanceFromPrimaryBody}}
      />
    {{/each}}
  </svg>
</div>
