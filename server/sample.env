# Sokown Server Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================

# Prisma database connection string
# See: https://pris.ly/d/connection-strings
DATABASE_URL=mysql://root:@localhost:3306/sokown

# =============================================================================
# Server
# =============================================================================

# Port to run the server on (default: 3000)
PORT=3000

# Secret key for signing session cookies (generate a random string)
COOKIE_SECRET=your-secret-key-here

# =============================================================================
# OpenID Connect (Axys)
# =============================================================================

# OAuth client credentials from your OpenID Connect provider
AXYS_CLIENT_ID=your-client-id
AXYS_CLIENT_SECRET=your-client-secret

# Redirect URI for OAuth callback (must match provider configuration)
AXYS_REDIRECT_URI=http://localhost:4200/auth/openid/callback

# =============================================================================
# Email Notifications (SMTP)
# =============================================================================

# SMTP server hostname (required for email notifications)
SMTP_HOST=localhost

# SMTP server port (default: 587)
SMTP_PORT=1025

# Use TLS/SSL connection (default: false)
SMTP_SECURE=false

# SMTP authentication credentials (optional, leave empty for local dev servers like Mailpit)
SMTP_USER=
SMTP_PASSWORD=

# Sender information for notification emails
SMTP_FROM_NAME=Sokown
SMTP_FROM_ADDRESS=noreply@example.com

# =============================================================================
# Application URLs
# =============================================================================

# Base URL of the client application (used for links in emails)
APP_URL=http://localhost:4200
